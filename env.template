# GovtJobsNow Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://govtjobs:YOUR_SECURE_PASSWORD@localhost:5432/govtjobnow
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD
PGHOST=localhost
PGPORT=5432
PGDATABASE=govtjobnow
PGUSER=govtjobs
PGPASSWORD=YOUR_SECURE_PASSWORD

# Application Configuration
NODE_ENV=production
PORT=3000
TZ=Asia/Kolkata

# Security Configuration (Generate with: openssl rand -base64 32)
SESSION_SECRET=YOUR_SUPER_SECURE_SESSION_SECRET

# Domain Configuration
DOMAIN=your-domain.com
BASE_URL=https://your-domain.com

# Logging Configuration
LOG_LEVEL=info

# Performance Settings
MAX_UPLOAD_SIZE=10mb
REQUEST_TIMEOUT=30000